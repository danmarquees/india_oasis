# India Oasis - cPanel Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Generate a new secret key for production
# You can use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-very-long-secret-key-here-minimum-50-characters

# Set to False in production
DEBUG=False

# Your domain names (comma-separated, no spaces)
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS (MySQL for cPanel)
# =============================================================================

# MySQL database credentials from cPanel
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email configuration (use cPanel email or external SMTP)
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=False
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password

# Default sender email
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin email for order notifications
ORDER_EMAIL_ADMIN=admin@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Enable/disable order emails
ORDER_EMAIL_ENABLED=True

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# MercadoPago credentials (get from https://www.mercadopago.com.br/developers)
MERCADO_PAGO_PUBLIC_KEY=APP_USR-your-public-key-here
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-your-access-token-here

# =============================================================================
# SHIPPING INTEGRATION
# =============================================================================

# Melhor Envio API (optional - for shipping calculations)
MELHOR_ENVIO_TOKEN=your-melhor-envio-token
MELHOR_ENVIO_CEP_ORIGEM=01034-001

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL settings (adjust based on your cPanel SSL configuration)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Force script name (leave empty unless you know what you're doing)
FORCE_SCRIPT_NAME=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application version
VERSION=1.0.0-cpanel

# Maximum items in shopping cart
MAX_CART_ITEMS=50

# Order timeout in minutes
ORDER_TIMEOUT_MINUTES=30

# Session timeout in seconds (1 hour = 3600)
SESSION_COOKIE_AGE=3600

# Maximum file upload size (in bytes)
# 5MB = 5242880 bytes
MAX_UPLOAD_SIZE=5242880

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Admin interface customization
ADMIN_SITE_HEADER=India Oasis Admin
ADMIN_SITE_TITLE=India Oasis Admin Portal
ADMIN_INDEX_TITLE=Bem-vindo ao India Oasis Admin

# Default admin user (for automated setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# =============================================================================
# DEVELOPMENT SETTINGS (for local testing)
# =============================================================================

# Uncomment these for local development
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# CPANEL SPECIFIC SETTINGS
# =============================================================================

# Python executable path (set by cPanel automatically)
# PYTHON_EXECUTABLE=/home/username/virtualenv/myapp/3.11/bin/python

# Application root (set by cPanel automatically)
# APPLICATION_ROOT=/home/username/myapp

# =============================================================================
# IMPORTANT NOTES FOR CPANEL DEPLOYMENT
# =============================================================================

# 1. Database Setup:
#    - Create MySQL database in cPanel
#    - Create database user and assign to database
#    - Update DB_* settings above with actual values

# 2. Email Setup:
#    - Use cPanel email accounts or external SMTP
#    - For cPanel email, use localhost as EMAIL_HOST
#    - Create email account: noreply@yourdomain.com

# 3. Domain Configuration:
#    - Point your domain to the application directory
#    - Update ALLOWED_HOSTS with your actual domain

# 4. File Permissions:
#    - Ensure logs/ directory is writable (755)
#    - Ensure media/ directory is writable (755)
#    - Ensure cache/ directory is writable (755)

# 5. Python Application Setup in cPanel:
#    - Application root: /path/to/your/app
#    - Application startup file: passenger_wsgi.py
#    - Application entry point: application
#    - Python version: 3.11 (or latest available)

# 6. SSL Certificate:
#    - Enable SSL in cPanel if available
#    - Update SECURE_SSL_REDIRECT=True if using SSL
#    - Update SESSION_COOKIE_SECURE=True if using SSL
#    - Update CSRF_COOKIE_SECURE=True if using SSL

# 7. Static Files:
#    - Run: python manage.py collectstatic
#    - Ensure static files are accessible via web

# 8. Testing:
#    - Test the application after deployment
#    - Check error logs in logs/ directory
#    - Verify email sending functionality
#    - Test payment processing in sandbox mode first
