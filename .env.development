# Development Environment Variables
# This file contains settings for local development

# Django Core Settings
DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production-12345678901234567890
DJANGO_SETTINGS_MODULE=india_oasis_project.settings_development

# Database (SQLite for development)
# DATABASE_URL is not needed for development - using SQLite by default

# Development Email Settings (Console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@localhost
ORDER_EMAIL_ENABLED=False
ORDER_EMAIL_ADMIN=admin@localhost

# MercadoPago Test Credentials (Sandbox)
MERCADO_PAGO_PUBLIC_KEY=TEST-your-public-key-here
MERCADO_PAGO_ACCESS_TOKEN=TEST-your-access-token-here

# Melhor Envio Test Settings
MELHOR_ENVIO_TOKEN=test-token
MELHOR_ENVIO_CEP_ORIGEM=01034-001
MELHOR_ENVIO_ENVIRONMENT=sandbox

# Development Settings
MAX_CART_ITEMS=100
ORDER_TIMEOUT_MINUTES=60

# Superuser for development
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost
DJANGO_SUPERUSER_PASSWORD=admin123

# Development flags
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Disable production features in development
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Cache settings (disabled for development)
# REDIS_URL=redis://localhost:6379/0

# Celery settings (synchronous in development)
CELERY_TASK_ALWAYS_EAGER=True
