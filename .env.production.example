# Production Environment Variables Template
# Copy this file to .env and fill in the actual values

# Django Core Settings
SECRET_KEY=your-very-long-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgres://username:password@hostname:port/database_name
# Example: DATABASE_URL=postgres://india_user:secure_password@db:5432/india_oasis

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://:password@hostname:port/database_number
# Example: REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your-redis-password

# Database Credentials (for docker-compose)
POSTGRES_DB=india_oasis
POSTGRES_USER=india_user
POSTGRES_PASSWORD=your-secure-database-password

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# MercadoPago Configuration
MERCADO_PAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADO_PAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Melhor Envio Configuration
MELHOR_ENVIO_TOKEN=your-melhor-envio-token
MELHOR_ENVIO_CEP_ORIGEM=01034-001
MELHOR_ENVIO_ENVIRONMENT=production

# Order and Email Settings
ORDER_EMAIL_ENABLED=True
ORDER_EMAIL_ADMIN=orders@yourdomain.com

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-url-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Performance Settings
MAX_CART_ITEMS=50
ORDER_TIMEOUT_MINUTES=30
RATELIMIT_ENABLE=True

# CORS Settings (if needed for API)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Time Zone
TIME_ZONE=America/Sao_Paulo

# Version
VERSION=1.0.0

# AWS S3 Configuration (if using S3 for media files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# Backup Settings
BACKUP_STORAGE=s3
BACKUP_S3_BUCKET=your-backup-bucket

# SSL Certificate paths (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Celery Settings
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
